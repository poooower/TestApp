<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.poooower.jetpack.MainFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_mainFragment_to_databindingFragment"
            app:destination="@id/databindingFragment"></action>
    </fragment>

    <fragment
        android:id="@+id/databindingFragment"
        android:name="com.github.poooower.jetpack.DataBindingFragment"
        android:label="@string/data_binding"
        tools:layout="@layout/fragment_databinding" />

</navigation>